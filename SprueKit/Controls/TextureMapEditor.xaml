<UserControl x:Class="SprueKit.Controls.TextureMapEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SprueKit.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             VisualEdgeMode="Aliased">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox IsReadOnly="True" x:Name="pathText" Grid.Column="0" Grid.ColumnSpan="2" />
        <Image x:Name="Preview" Grid.Column="0" Grid.RowSpan="3" Grid.Row="1"/>
        <ComboBox x:Name="comboChannel" Grid.Column="1" Grid.Row="1"/>
        <ComboBox x:Name="comboBlend" Grid.Column="1" Grid.Row="2"/>
        <CheckBox Content="Use Alpha" x:Name="checkAlpha" Grid.Column="1" Grid.Row="3"/>
    </Grid>
</UserControl>
